{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch ProductBundles.Api (HTTP)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/ProductBundles.Api/bin/Debug/net8.0/ProductBundles.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/ProductBundles.Api",
            "console": "internalConsole",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5077"
            }
        },
        {
            "name": "Attach to ProductBundles.Api",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}
